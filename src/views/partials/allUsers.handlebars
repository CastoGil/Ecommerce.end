<!-- Vista para mostrar todos los usuarios -->
<h1>Todos los usuarios</h1>

{{#if users}}
  <ul>
    {{#each users}}
      <li>
        <strong>Nombre:</strong> {{first_name}}, <strong>Email:</strong> {{email}}, <strong>Tipo de cuenta:</strong> {{accountType}}
      </li>
    {{/each}}
  </ul>
{{else}}
  <p>No hay usuarios registrados.</p>
{{/if}}

{{#if showInactive}}
  <h2>Usuarios inactivos</h2>
  {{#if inactiveUsers}}
    <ul>
      {{#each inactiveUsers}}
        <li>
          <strong>Nombre:</strong> {{first_name}}, <strong>Email:</strong> {{email}}, <strong>Tipo de cuenta:</strong> {{accountType}}
        </li>
      {{/each}}
    </ul>
    <!-- BotÃ³n para eliminar usuarios inactivos -->
    <button id="deleteInactiveBtn" onclick="deleteInactiveUsers()">Eliminar usuarios inactivos</button>
  {{else}}
    <p>No hay usuarios inactivos.</p>
  {{/if}}
{{/if}}

