<div>
  <h2 class="title-login">PANEL DE CUENTA</h2>
</div>
<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="login-form">
        {{#if error}}
          <div class="alert alert-danger">{{error}}</div>
        {{/if}}
        {{#if success}}
          <div class="alert alert-info">{{success}}</div>
        {{/if}}
        <form method="POST" action="/auth/login">
          <div class="form-group">
            <p>
              <strong>ENTRAR:</strong>
            </p>
            <input
              type="email"
              id="email"
              name="email"
              class="form-control"
              placeholder="CORREO ELECTRÓNICO *"
              required
            />
          </div>
          <div class="form-group">
            <input
              type="password"
              id="password"
              name="password"
              class="form-control"
              placeholder="CONTRASEÑA *"
              required
            />
          </div>
          <div class="sesion text-center">
            <button type="submit" class="btn ligth">INICIAR SESIÓN</button>
            <div class="forgot-password">
              <p class="link-login">
                <a href="/auth/password/reset-request">¿Olvidaste tu contraseña?</a>
              </p>
            </div>
          </div>
        </form>
        <div class="sesion text-center">
          <button class="btn git">
            <a href="/auth/github" class="github">
              <i class="fab fa-github"></i>
             INGRESAR CON GITHUB
            </a>
          </button>
          <p class="link-login">¿No tienes cuenta?
            <a href="/auth/register">Registrar</a></p>
        </div>
      </div>
    </div>
  </div>
</div>
